


    <div class="container-fluid-anchor" id="home">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <%= image_tag("reversible_jacket.jpg", alt:"reversible_jacket", class: "image-responsive") %>
            <div class="carousel-caption">
              <h3>REVERSIBLE JACKET</h3>
              <p></p>
            </div>
          </div>

          <div class="item">
            <%= image_tag("laptop_sleeve.jpg", alt:"laptop_sleeve", class: "image-responsive") %>
            <div class="carousel-caption">
              <h3>LAPTOP SLEEVE</h3>
              <p></p>
            </div>
          </div>

          <div class="item">
            <%= image_tag("sandals.jpg", alt:"sandals", class: "image-responsive") %>
            <div class="carousel-caption">
              <h3>SANDALS</h3>
              <p></p>
            </div>
          </div>

        </div><!-- end carousel-inner -->

        <!-- Left and right controls -->
          <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>

      </div><!-- end carousel -->
    </div><!-- end container-fluid-anchor -->

